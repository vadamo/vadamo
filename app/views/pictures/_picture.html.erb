<tr>
  <td class="picture">
    <span class="content">
      <%= image_tag(picture.image.url) %>
    </span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(picture.created_at) %> ago.
    </span>
  </td>
  <td>
    <%= link_to picture.id, picture, :method => :show %>
  </td>
  <% if current_user?(picture.user_id) %>
  <td>
    <%= link_to "delete", picture, :method => :delete,
                                     :confirm => "You sure?" %>
  </td>
  <% end %>
</tr>
