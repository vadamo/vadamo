<h1>Editing artwork</h1>

<% form_for(@artwork) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :medium %><br />
    <%= f.text_field :type %>
  </p>

  <p>
    <%= f.label :edition_number %><br />
    <%= f.text_field :edition_number %>
  </p>

  <p>
    <%= f.label :physical_width %><br />
    <%= f.text_field :physical_width %>
  </p>

  <p>
    <%= f.label :physical_height %><br />
    <%= f.text_field :physical_height %>
  </p>

  <p>
    <%= f.label :physical_depth %><br />
    <%= f.text_field :physical_depth %>
  </p>

  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @artwork %> |
<%= link_to 'Back', artworks_path %>
