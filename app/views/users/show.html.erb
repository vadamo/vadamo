<table class="profile">
  <tr>
    <td class="main">
      <h2>
        <%= gravatar_for @user %>
        <%= h @user.name %>
      </h2>
    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= h @user.name %><br />
      <strong>URL</strong> <%= link_to user_path(@user), @user %><br />
      <strong>Artworks</strong> <%= @user.artworks.count %>
    </td>
  </tr>
  <tr>
    <td class="artwork">
      <% unless @user.artworks.empty? %>
        <table class="artworks">
          <%= render @artworks %>
        </table>
        <%= will_paginate @artworks %>
      <% end %>
    </td>
  </tr>
</table>
