<div class="user_info">
  <a href="<%= user_path(current_user) %>">
    <%= image_tag current_user.avatar.url(:thumb) %>
    <span class="user_name">
      <%= h current_user.name %>
    </span>
    <span class="artworks">
      <%= pluralize(current_user.artworks.count, "artwork") %>
    </span>
  </a>
</div>
